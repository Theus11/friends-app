<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="mb-3">
    <%= f.password_field :password, class:"form-control", autocomplete: "current-password",  placeholder: "Password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check">
      <%= f.check_box :remember_me, class:"form-check-input" %>
      <%= f.label :remember_me, class:"form-check-label"%>
    </div>
  <% end %>

  <br/>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-dark"%>
  </div>

  <br/>
<% end %>

<%= render "devise/shared/links" %>
